<?xml version = "1.0" encoding = "UTF-8"?>
<mapper namespace="com.solvd.hospital.dao.mybatisimpl.DoctorDAOImpl">
    <resultMap type="com.solvd.hospital.entities.Doctor" id="DoctorResultMap" automapping="false">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="position" property="position"/>
        <result column="age" property="age"/>
    </resultMap>
    <insert id="insert" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        INSERT INTO DOCTORS (name, position, age) VALUES (#{name}, #{position}, #{age})
        ]]>
    </insert>
    <update id="update" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        UPDATE Doctors SET name=${name}, position=${position}, age=${age} WHERE id=${id}
        ]]>
    </update>
    <delete id="delete" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            DELETE from Doctors where id=${id}
        ]]>
    </delete>
    <select id="getById" resultMap="DoctorResultMap">
        <![CDATA[
            SELECT * FROM Doctors where id=${id}
        ]]>
    </select>
</mapper>